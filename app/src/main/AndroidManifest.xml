<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trinhtien2212.findhomerental">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/house_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/house_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.FindHomeRental"
        android:usesCleartextTraffic="true">
        <activity android:name=".RoomsOfAUser"></activity>
        <activity android:name=".WarnList" />
        <activity android:name=".ui.warn.WarnDetail" />
        <activity android:name=".ui.home.RoomDetail" />
        <activity android:name=".ui.home.GoogleSignIn" />
        <activity android:name=".ui.home.SearchActivity" />
        <activity android:name=".MainAdminActivity" />
        <activity android:name=".RoomListActivity" />
        <activity android:name=".UserListActivity" />
        <activity android:name=".ui.add_room.AddRoomActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FindHomeRental.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>