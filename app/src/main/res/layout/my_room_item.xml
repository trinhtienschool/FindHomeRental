<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/imageHome3"
                android:src="@drawable/tro1"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/titleAddress3"
                android:text="88 Tân Hòa Đông, Quận 6"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_toRightOf="@id/imageHome3"
                android:layout_toEndOf="@id/imageHome3"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titlePrice3"
                android:text="4,3 triệu VND/căn"
                android:textSize="18sp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:layout_toRightOf="@id/imageHome3"
                android:layout_toEndOf="@id/imageHome3"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/titleAddress3"/>
            <ImageView
                android:id="@+id/imageViewEdit3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_toRightOf="@id/titleAddress3"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/imageViewDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_toRightOf="@id/titleAddress3"
                android:layout_below="@id/imageViewEdit3"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
