                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/image_phone2"
                        android:text="0332089065"
                        android:textColor="@color/black"
                        android:textSize="18dp"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:paddingTop="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_zalo"
                        android:src="@drawable/facebook"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="0dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Gi치:"
                        android:textColor="@color/black"
                        android:textSize="18dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/text_zalo"

                        android:paddingTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/image_zalo"
                        android:text="NongLamUniversity"
                        android:textColor="@color/black"
                        android:textSize="18dp"></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:paddingTop="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_gmail"
