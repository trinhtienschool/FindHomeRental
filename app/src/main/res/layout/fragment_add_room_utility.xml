<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.add_room.AddRoomUtilityFragment">



    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="20dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hình ảnh:"
                android:textColor="#FF9800"
                android:textSize="25sp" />
            <!--                layout photo-->
            <LinearLayout
                android:id="@+id/llPhoto"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <!--                        Image to-->

                    <ImageButton
                        android:id="@+id/ib_image1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="7"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/add_image_big" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <ImageButton
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:id="@+id/ib_image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/add_image_small" />

                        <ImageButton
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:id="@+id/ib_image3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/add_image_small" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"

                    android:orientation="horizontal">

                    <ImageButton
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:id="@+id/ib_image6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:src="@drawable/add_image_small" />

                    <ImageButton
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:id="@+id/ib_image5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/add_image_small" />

                    <ImageButton
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:id="@+id/ib_image4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/add_image_small" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiện ích:"
                android:textColor="#FF9800"
                android:textSize="25sp" />
<!---->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/table_layout"
                android:stretchColumns="*">

                <TableRow

                    android:layout_width="match_parent"
                    android:minHeight="50dp"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/cb_tivi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="Tivi" />

                    <CheckBox
                        android:id="@+id/cb_wardrobe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="Tủ đồ" />



                    <CheckBox
                        android:id="@+id/cb_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="Wifi" />


                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:minHeight="50dp"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/cb_fre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="Tủ lạnh" />

                    <CheckBox
                        android:id="@+id/cb_air_con"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="Máy lạnh" />

                    <CheckBox
                        android:id="@+id/cb_attic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="Gác lửng" />
                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:minHeight="50dp"
                    android:layout_height="wrap_content">

<!--                   -->
                    <CheckBox
                        android:id="@+id/cb_hotWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="Máy nước nóng" />
                    <CheckBox
                        android:id="@+id/cb_wc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="Nhà vệ sinh riêng" />

                    <CheckBox
                        android:id="@+id/cb_free_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="Tự do giờ giấc" />
                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <CheckBox
                        android:id="@+id/cb_security"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:width="0dp"
                        android:text="An ninh" />

<!--                   -->
                    <CheckBox
                        android:id="@+id/cb_park"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="2"
                        android:width="0dp"
                        android:text="Chỗ để xe" />
                </TableRow>
            </TableLayout>


            <Button
                android:id="@+id/btn_save_room"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Lưu"
                app:backgroundTint="#FFC107" />
        </LinearLayout>


    </ScrollView>

</FrameLayout>