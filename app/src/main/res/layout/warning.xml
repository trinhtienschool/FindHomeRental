<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/warningdia">
    </ImageView>

    <TextView
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XÓA BÀI VIẾT VĨNH VIỄN"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:gravity="center_horizontal"></TextView>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btnthoat"
            app:backgroundTint="@null"
            android:background="@drawable/borderbuttonexit"
            android:layout_marginLeft="50dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Thoát"></Button>
        <Button
            android:id="@+id/btnxoa"
            app:backgroundTint="@null"
            android:background="@drawable/borderbuttondelete"
            android:layout_marginLeft="120dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Xóa"></Button>
    </LinearLayout>
</LinearLayout>