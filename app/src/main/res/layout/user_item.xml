<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageUser"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_person_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imageHome"
                    android:layout_toRightOf="@id/imageHome"
                    android:text="Trần Nhật Thy"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titleEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleName"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/imageHome"
                    android:layout_toRightOf="@id/imageHome"
                    android:text="nhatthy1224@gmail.com"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="50dp"
                        android:id="@+id/imgButtonHouse"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_house_24" />
                    <ImageButton
                        android:layout_marginRight="50dp"
                        android:id="@+id/img_admin_panel"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_admin_panel_settings_24" />
                    <ImageButton
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="50dp"
                        android:id="@+id/imageButtonReport"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_library_books_24" />


                    <ImageButton
                        android:layout_marginRight="20dp"
                        android:id="@+id/imageButtonDelete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_delete_outline_24" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>