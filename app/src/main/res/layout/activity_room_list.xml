<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomListActivity">
    <LinearLayout
        android:id="@+id/toolbar_room"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <ImageButton
            android:id="@+id/ImageButtonBack2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Danh sách bài viết"
            android:textColor="@color/white"
            android:textSize="22sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/header_title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/toolbar_room">
        <TextView
            android:id="@+id/TextViewTotalResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="#f00"
            android:textSize="30sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Kết quả"
            />
        <ImageButton
            android:id="@+id/ImgButtonFilter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_filter_alt_24"
            android:background="@color/white"
            android:layout_marginLeft="200dp"
            android:onClick="filterDistance"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/ImgButtonSort"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/ic_baseline_swap_vert_24"
            android:background="@color/white"
            android:onClick="sortPrice"
            android:scaleType="fitXY"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_title_1"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />

</RelativeLayout>