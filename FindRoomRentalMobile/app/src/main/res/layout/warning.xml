<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_layout_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/ic_baseline_warning_24">
    </ImageView>

    <TextView
        android:id="@+id/textWarning"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XÓA BÀI VIẾT VĨNH VIỄN"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/red_color"
        android:gravity="center_horizontal"></TextView>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnthoatid"
            app:backgroundTint="@null"
            android:background="@drawable/borderbuttonexit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Thoát"></Button>

        <Button
            android:id="@+id/btnxoaid"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/borderbuttondelete"
            android:text="Xóa"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"></Button>
    </LinearLayout>
</LinearLayout>